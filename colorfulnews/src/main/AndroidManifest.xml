<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cgy.colorfulnews">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/BaseAppTheme">

        <activity
            android:name=".module.splash.SplashActivity"
            android:excludeFromRecents="false"
            android:theme="@style/BaseAppTheme.Trans">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".module.news.activity.NewsActivity"
            android:theme="@style/BaseAppTheme.NoTrans" />

        <activity
            android:name=".module.news.activity.NewsDetailActivity"
            android:theme="@style/BaseAppTheme.NoTrans"/>

        <activity
            android:name=".module.news.activity.NewsChannelActivity"
            android:theme="@style/BaseAppTheme.NoTrans" />

        <activity
            android:name=".module.news.activity.NewsBrowserActivity"
            android:theme="@style/BaseAppTheme.NoTrans" />

        <activity
            android:name=".module.news.activity.NewsPhotoDetailActivity"
            android:theme="@style/BaseAppTheme.NoTrans"/>
        <activity
            android:name=".module.about.AboutActivity"
            android:theme="@style/BaseAppTheme.NoTrans"/>

        <activity
            android:name=".module.photo.activity.PhotoActivity"
            android:theme="@style/BaseAppTheme.NoTrans"/>

        <activity android:name=".module.photo.activity.PhotoDetailActivity"
            android:theme="@style/BaseAppTheme.NoTrans"/>

    </application>

</manifest>